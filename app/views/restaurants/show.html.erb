<h1><%= @restaurant.name %></h1>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %>, <%= review.rating %></li>
  <% end %>
</ul>

<%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: "btn btn-primary btn-sm" %>
<%= link_to 'Back', restaurants_path, class: "btn btn-primary btn-sm" %>
